# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Google Cloud Speech-to-Text
GOOGLE_STT_LANGUAGE_CODE=hi-IN
GOOGLE_STT_LANGUAGE_CODE_MARATHI=mr-IN
GOOGLE_STT_LANGUAGE_CODE_ENGLISH=en-US

# Google Cloud Text-to-Speech
GOOGLE_TTS_LANGUAGE_CODE=hi-IN
GOOGLE_TTS_VOICE_NAME=hi-IN-Neural2-A

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# OpenAI (Alternative AI service)
OPENAI_API_KEY=your-openai-api-key-here

# Image Processing Settings
MAX_IMAGE_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp
OUTPUT_IMAGE_QUALITY=95

# UI Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_PRIMARY_COLOR=#FF6B6B
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF

# Language Settings
DEFAULT_LANGUAGE=hi
SUPPORTED_LANGUAGES=hi,mr,en

# Platform Optimization Settings
AMAZON_IMAGE_SIZE=1000x1000
INSTAGRAM_IMAGE_SIZE=1080x1080
WHATSAPP_IMAGE_SIZE=640x640

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_VOICE_FEEDBACK=true
ENABLE_BEFORE_AFTER_COMPARISON=true
ENABLE_BATCH_PROCESSING=false